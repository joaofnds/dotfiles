export TZ=America/Sao_Paulo
export DO_NOT_TRACK=1
export ZSH=$HOME/.oh-my-zsh
export ZSH_THEME="robbyrussell"
plugins=(encode64 fzf git z)

export HISTSIZE=1000000000

export EDITOR=nvim
export TERM=alacritty
export MANPAGER="bat --plain"

export LC_ALL=en_US.UTF-8
export LANG=$LC_ALL
export LANGUAGE=$LC_ALL

export SSH_KEY_PATH="$HOME/.ssh/id_rsa"

export PATH="/usr/local/sbin:$PATH"
export PATH="/usr/local/bin:$PATH"
export PATH="$HOME/.local/bin:$PATH"
export PATH="$HOME/.bin:$PATH"
export PATH="$HOME/.scripts:$PATH"
export PATH="$HOME/.config/emacs/bin:$PATH"

export FZF_DEFAULT_COMMAND='fd --type file --hidden'
export FZF_UNRESTRICTED_COMMAND='fd --type file --unrestricted --exclude .git --exclude node_modules'
export FZF_DEFAULT_OPTS="--layout=reverse --inline-info"

export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_CTRL_T_OPTS="${FZF_CTRL_T_OPTS} \
    --prompt '> ' \
    --bind 'ctrl-g:transform:[[ \$FZF_PROMPT =~ unrestricted ]] && \
        echo \"change-prompt(> )+reload($FZF_CTRL_T_COMMAND)\" || \
        echo \"change-prompt(unrestricted> )+reload($FZF_UNRESTRICTED_COMMAND)\"'"

export OPENEMU_SOURCE="$HOME/Library/Application Support/OpenEmu"
export OPENEMU_DESTINATION="$HOME/iCloud/OpenEmu"
