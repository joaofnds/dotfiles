fmp() {
  xinput --set-prop "AlpsPS/2 ALPS GlidePoint" "Synaptics Finger" 1 1 255
  xinput --set-prop 12 "Device Accel Profile" 2
  xinput --set-prop 12 "Synaptics Scrolling Distance" -20 -20
  xinput --set-prop 12 "Synaptics Two-Finger Scrolling" 1 1
}

upgrade() {
  sudo apt update
  sudo apt full-upgrade
  sudo apt autoremove
}

AndEmu() {
	emulator -avd "$1" -gpu swiftshader -qemu -enable-kvm
}

startminikube() {
  minikube start --insecure-registry=192.168.99.1:5000
  # minikube already changes context on `start`
  # kubectl config use-context minikube
  eval $(minikube docker-env)
}

stopminikube() {
  minikube stop
  eval $(minikube docker-env -u)
}

