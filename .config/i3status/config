# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#98C379"
        color_degraded = "#ABB2BF"
        color_bad = "#E06C75"
        interval = 1
}

order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "battery all"
order += "tztime local"

wireless _first_ {
        format_up = " (%quality at %essid) %ip"
        format_down = ""
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = " %ip (%speed)"
        format_down = ""
}

volume master {
  format = " %volume"
    format_muted = " (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

cpu_usage {
  format = " %usage"
}

cpu_temperature 0 {
  format = " %degrees°C"
    max_threshold = 60
    format_above_threshold = "  %degrees°C"
}

battery all {
        format = "%status %percentage %remaining"
        format_down = "" # No battery
        status_chr = "" # Charging
        status_bat = "" # Normal use
        status_unk = "?" # whut?
        status_full = "" # Battery full
        threshold_type = "percentage" # Threshold type
        low_threshold = 10 # Thresholde value
        hide_seconds = true # Hide "%remaining" second
        integer_battery_capacity = true # Hide "%percentage" decimals
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
