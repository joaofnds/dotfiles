#!/usr/bin/env sh

LOCKFILE="$HOME/.colemak"

enable() {
	touch $LOCKFILE
	echo "enabled"
}

disable() {
	rm -f $LOCKFILE
	echo "disabled"
}

toggle() {
	if [ -e $LOCKFILE ]; then
		disable
	else
		enable
	fi
}

case $1 in
up)
	enable
	;;
down)
	disable
	;;
*)
	toggle
	;;
esac

pgrep Emacs-x86_64-10_14 | xargs -n1 kill -SIGUSR1 &
