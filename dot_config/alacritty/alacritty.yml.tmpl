window:
  dimensions:
   columns: 120
   lines: 45

  padding:
   x: 0
   y: 0

  {{- if eq .chezmoi.os "darwin" }}
  decorations: buttonless
  {{- end }}

font:
  normal:
    family: Iosevka SS08
    style: Light

  bold:
    family: Iosevka SS08
    style: Bold

  italic:
    family: Iosevka SS08
    style: Light Italic

  bold_italic:
    family: Iosevka SS08
    style: Bold Italic

  {{- if eq .chezmoi.os "darwin" }}
  size: 18
  {{- end }}
  {{- if eq .chezmoi.os "linux" }}
  size: 12
  {{- end }}

  {{- if eq .chezmoi.os "darwin" }}
  use_thin_strokes: true
  {{- end }}

live_config_reload: true

# Solarized Dark
colors:
  primary:
    background: '#002b36' # base03
    foreground: '#839496' # base0

  cursor:
    text:   '#002b36' # base03
    cursor: '#839496' # base0

  normal:
    black:   '#073642' # base02
    red:     '#dc322f' # red
    green:   '#859900' # green
    yellow:  '#b58900' # yellow
    blue:    '#268bd2' # blue
    magenta: '#d33682' # magenta
    cyan:    '#2aa198' # cyan
    white:   '#eee8d5' # base2

  bright:
    black:   '#002b36' # base03
    red:     '#cb4b16' # orange
    green:   '#586e75' # base01
    yellow:  '#657b83' # base00
    blue:    '#839496' # base0
    magenta: '#6c71c4' # violet
    cyan:    '#93a1a1' # base1
    white:   '#fdf6e3' # base3
